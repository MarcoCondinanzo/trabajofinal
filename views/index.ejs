<!DOCTYPE html>
<html lang="en">
    <%- include('partials/head'); %>
    <body>
        <%- include('partials/header'); %>
        <div class="container">
            <div class="row">
              <div class="col-md-12">
                <a href="crear" class="btn d">Crear Usuario</a>
                <hr>
              </div>
            </div>
          </div>
        <div class="container">
            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>User ID</th>
                        <th>Nombre</th>
                        <th>Apellido</th>
                        <th>Email</th>
                        <th>Contrase√±a encriptada</th>
                        <th>Imagen</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    <% usuarios.forEach(function(usuario){ %>
                        <tr>
                            <th scope="row"><%= usuario.id %> </th>
                            <td><%= usuario.nombre %></td>
                            <td><%= usuario.apellido %></td>
                            <td> <%= usuario.email %></td>
                            <td><%= usuario.pwd %></td>
                            <td> <img src="images/users/<%= usuario.image %>"  width="50" alt="avatar"></td>
                            <td>  
                                <div>
                                <a class="btn btn-primary" href="/editar/<%= usuario.id %>"> Editar </a>
                                <form action="/eliminar/<%= usuario.id %>" method="POST"> 
                                <button class="btn btn-danger" type="submit"> Eliminar</button>
                                </form>
                                 </div>
                            </td>
                        </tr>
                     <% }) %>
                </tbody>
            </table>
    </div>
    </body>
    </html>